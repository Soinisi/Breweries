<table class="table">
<thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Rater</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% ratings.each do |rating| %>
      <tr>
        <td><%= rating.beer %></td>
        <td><%= rating.score %></td>
        <td><%= link_to rating.user.username, rating.user, class:'btn btn-info' %></td>
        </tr>
    <% end %>
</tbody>
</table>